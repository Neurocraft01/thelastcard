# =============================================================================
# Django Settings
# =============================================================================
DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production-min-50-chars
ALLOWED_HOSTS=localhost,127.0.0.1

# CSRF Trusted Origins (comma-separated)
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Site Settings
SITE_NAME=The Last Card
SITE_URL=http://localhost:8000


# =============================================================================
# Neon PostgreSQL Database
# =============================================================================
# Development (SQLite by default)
# For Neon PostgreSQL production, get your connection string from https://neon.tech/
# Format: postgresql://[user]:[password]@[host]/[database]?sslmode=require

DATABASE_URL=postgresql://username:password@ep-example-123456.us-east-1.aws.neon.tech/dbname?sslmode=require


# =============================================================================
# Cloudflare R2 Storage (S3-Compatible)
# =============================================================================
# Set to True to enable R2 storage for media files
USE_R2_STORAGE=False

# Get these from Cloudflare Dashboard > R2 > Manage R2 API Tokens
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=nfc-platform

# Optional: Custom domain for R2 bucket
# R2_CUSTOM_DOMAIN=cdn.yourdomain.com


# =============================================================================
# Email Configuration
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password-here
DEFAULT_FROM_EMAIL=The Last Card <noreply@yourdomain.com>


# =============================================================================
# Redis (Optional - for caching and sessions in production)
# =============================================================================
REDIS_URL=redis://localhost:6379/0


# =============================================================================
# CORS Settings
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
